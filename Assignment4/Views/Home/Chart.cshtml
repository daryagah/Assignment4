@model IEnumerable<Assignment4.Models.Hospital>

@{
    Layout = null;
}

<!DOCTYPE html>
<html id="graphs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="@Url.Content("~/css/main.css")" rel="stylesheet" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800&display=swap" rel="stylesheet">
    <title>Visualizing Insights</title>
</head>
<body>

    <div class="main">
        <div id="header-wrapper">
            <nav class="mainnav">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>><a asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a asp-controller="Home" asp-action="Table">Hospital Charge Dataset</a></li>
                    <li><a asp-controller="Home" asp-action="Chart">Visualizing Insights</a></li>
                </ul>
                <hr />
            </nav>

            <h1>Visualizing Insights</h1>
        </div>

        <nav id="graph-nav">
            <ul>
                <li><a asp-controller="Home" asp-action="DischargesByState">Total Discharges by State</a></li>
                <li><a asp-controller="Home" asp-action="AveragePaymentsByDRGs">Average Total Payments by DRGs</a></li>
                <li><a href="#average-by-state" class="scrolly">Average Total Payments by State</a></li>
                <li><a href="#diff-by-location" class="scrolly">Difference in Average Total Payments by Region</a></li>
                <li><a href="#diff-by-drg" class="scrolly">Difference in Average Total Payments by DRGs</a></li>
            </ul>
        </nav>

        <div class="content">
            <div id="discharge-state">
                <h2>@ViewBag.Title</h2>
                <p>@ViewBag.Desc</p>
                <div class="chart-container" style="position: center; height:40vh; width:80vw">
                    <canvas id="chart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        <br />
    </div>
    <script>
        new Chart(document.getElementById("chart"), {
          type: 'bar',
          data: {
            labels: [@Html.Raw(@ViewBag.Labels)],
            datasets: [
              {
                label: '@ViewBag.Label',
                backgroundColor: "#FFA07A",
                    data: [@Html.Raw(@ViewBag.Data)]
                  }
            ]
          },
          options: {
            legend: { display: false },
            title: {
              display: true,
              },
          }
        });
    </script>
    <script src="@Url.Content("/js/jquery.min.js")"></script>
    <script src="@Url.Content("/js/jquery.scrolly.min.js")"></script>
    <script src="@Url.Content("/js/main.js")"></script>
</body>
</html>

