@model IEnumerable<Assignment4.Models.Hospital>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" id="sub">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="@Url.Content("~/css/main.css")" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800&display=swap" rel="stylesheet">
    <title>Hospital Charge Dataset</title>

</head>
<body>

    <div id="header-wrapper">
        <nav class="mainnav">
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li>><a asp-controller="Home" asp-action="About">About Us</a></li>
                <li><a asp-controller="Home" asp-action="Table">Hospital Charge Dataset</a></li>
                <li><a asp-controller="Home" asp-action="Chart">Visualizing Insights</a></li>
            </ul>
            <hr />
        </nav>

        <h1>Descriptive Statistics about Data Set</h1>
    </div>

    <div class="content">
        <ul>
            <li>
                Variables in the dataset are: drg definition, provider id, provider name,  provider street address, provider city, provider state, provider zip code, hospital referral region description, total discharges, averaged covered charges, average total payments, average medicare payments.
            </li>
            <li>
                Integer values are: Total Discharges, Averaged Covered Charges, Average Total Payments and Average Medicare Payments
            </li>
        </ul>

        <div id="table">
            <h2>Analysis of Integer Variables</h2>
            <table id="table-only">
                <thead>
                    <tr>
                        <th>
                            DRG Definition
                        </th>
                        <th>
                            Provider Name
                        </th>
                        <th>
                            Provider Street Address
                        </th>
                        <th>
                            Provider City
                        </th>
                        <th>
                            Provider State
                        </th>
                        <th>
                            Provider ZipCode
                        </th>
                        <th>
                            Hospital Referral Region Description
                        </th>
                        <th>
                            Total Discharges
                        </th>
                        <th>
                            Average Covered Charges
                        </th>
                        <th>
                            Average Total Payments
                        </th>
                        <th>
                            Average Medicare Payments
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.drg_definition)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider_street_address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider_city)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider_state)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider_zip_code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hospital_referral_region_description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.total_discharges)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.average_covered_charges)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.average_medicare_payments)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.average_medicare_payments_2)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
